<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PreviewActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:padding="10dp"
        android:text="Preview Details"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvEventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center"
        android:paddingTop="51dp"
        android:text="Event Title"
        android:textSize="21dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvEventDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center"
        android:text="Event Desc"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvEventStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center"
        android:text="EventStartDate"
        android:textSize="19dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvEventEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center"
        android:text="EventEndDate"
        android:textSize="19dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvEventStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center"
        android:text="EventStartTime"
        android:textSize="19dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvEventEndTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center"
        android:text="EventEndTime"
        android:textSize="19dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center"
        android:text="Prise"
        android:textSize="19dp"
        android:textStyle="bold" />

</LinearLayout>